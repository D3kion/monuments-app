{
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "codeFrame": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Backbone": false,
        "location": false,
        "localStorage": false
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double", { "avoidEscape": true }],
        "no-console": "off",
        "no-alert": "error",
        "no-debugger": "off"
    }
}
